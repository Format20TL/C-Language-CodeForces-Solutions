#include <stdio.h>
#include <stdlib.h>
#include<ctype.h>
 
/* run this program using the console pauser or add your own getch, system("pause") or input loop */
 
int main(int argc, char *argv[]) {
	char word[110];
	int line;
	scanf("%d",&line);
	
	for(int i =0;i<line;i++)
	{
		scanf("%s",&word);
	if(strlen(word)>10)
	{
		printf("%c",word[0]);
		printf("%d",strlen(word)-2);
		printf("%c",word[strlen(word)-1]);
		printf("\n");
	}
	else
	{
		printf("%s\n",word);
	}
	}
	
	
	
	return 0;
}
