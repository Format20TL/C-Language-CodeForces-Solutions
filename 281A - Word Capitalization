#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
 
 
/* run this program using the console pauser or add your own getch, system("pause") or input loop */
 
 
int main(int argc, char *argv[]) {
	char string[1000];
	
	
	scanf("%s",&string);
	
	string[0]=toupper(string[0]);
	printf("%s",string);
	
	
	
	
	
	
	return 0;
}
