#include <stdio.h>
#include <stdlib.h>


/* run this program using the console pauser or add your own getch, system("pause") or input loop */

 
int main(int argc, char *argv[]) {
	
	int stop,passenger,a,b;
	int max=0;
	
	scanf("%d",&stop);
	
	while(stop>1)
	{
		scanf("%d %d",&a,&b);
		passenger +=b-a;
		if(passenger>max)
		{
			max=passenger;
			
		}
		
		stop--;
	}
	
	
	printf("%d",max);
	return 0;
}
