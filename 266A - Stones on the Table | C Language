#include <stdio.h>
#include <stdlib.h>
 
 
/* run this program using the console pauser or add your own getch, system("pause") or input loop */
 
 
int main(int argc, char *argv[]) {
	char colors[50];
	int size;
	int count =0;
	scanf("%d %s",&size,&colors);
	
	
	for(int i =0;i<size-1;i++)
	{
		if(colors[i]==colors[i+1])
		{
			count++;
		}
	}
	printf("%d",count);
	
	
	
	
	
	return 0;
}
