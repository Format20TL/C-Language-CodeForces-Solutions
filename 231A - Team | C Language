#include <stdio.h>
#include <stdlib.h>
#include<ctype.h>
 
/* run this program using the console pauser or add your own getch, system("pause") or input loop */
 
int main(int argc, char *argv[]) {
	int line,first,second,third,count;
	count =0;
	scanf("%d",&line);
	
	
	for(int i =1;i<=line;i++)
	{
		scanf("%d",&first);
		scanf("%d",&second);
		scanf("%d",&third);
		
		if(first+second+third>=2)
		{
			count++;
		}
	}
	printf("%d",count);
	
	
	
	
	return 0;
}
