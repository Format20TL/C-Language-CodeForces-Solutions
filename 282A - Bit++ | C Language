
#include <stdio.h>
#include <stdlib.h>
#include<ctype.h>
 
/* run this program using the console pauser or add your own getch, system("pause") or input loop */
 
int main(int argc, char *argv[]) {
	
	int line;
	int x =0;
	char op[3];
	scanf("%d",&line);
	for(int i =0;i<line;i++)
	{
		scanf("%s",&op);
		if(op[1]=='+')
		{
			x++;
		}
		else{
			x--;
		}
	}
	printf("%d",x);
	
	
	
	
	return 0;
}
